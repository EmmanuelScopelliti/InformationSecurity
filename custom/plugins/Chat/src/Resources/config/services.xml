<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="chat.controller.chat" class="Chat\Controller\ChatController" public="true">
            <argument type="service" id="chat_entry.repository"/>
            <argument type="service" id="Shopware\Core\System\User\UserRepository"/>
        </service>
        <service class="Chat\Core\Content\Chat\ChatDefinition" id="chat.definition.chat" public="true">
            <tag name="shopware.entity.definition" entity="chat_entry"/> 
        </service>
    </services>
</container>
